@model IEnumerable<BookShopProject.Models.Book>

@{
    ViewBag.Title = "Books";
}

<h2>Shopping cart</h2>


<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Author.Name)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Title)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Description)
        </th>
        <th>
            @Html.DisplayNameFor(model => model.Cost)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Author.Name)
                @Html.DisplayFor(modelItem => item.Author.Surname)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Title)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Description)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Cost)
            </td>
            <td>
                @if (item.NumberInWarehouse > 0)

                {
                    <div class="alert alert-success">
                        <p align="center"><strong>@Html.ActionLink("Buy", "BuyBook", "Purchases", new { id = item.BookId }, null)</strong></p>
                    </div>
                    
                }
                @if (item.NumberInWarehouse <= 0)
                {
                    <div class="alert alert-danger">
                        <p align="center"><strong>Product unavailable</strong></p>
                    </div>
                }

            </td>
        </tr>
    }

</table>
